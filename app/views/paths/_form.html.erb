<%= form_with(model: path, local: true) do |form| %>
  <% if path.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(path.errors.count, "error") %> prohibited this path from being saved:</h2>

      <ul>
      <% path.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :cantOperarios %>
    <%= form.number_field :cantOperarios, id: :path_cantOperarios %>
  </div>

  <div class="field">
    <%= form.label :temperatura %>
    <%= form.number_field :temperatura, id: :path_temperatura %>
  </div>

  <div class="field">
    <%= form.label :humedad %>
    <%= form.number_field :humedad, id: :path_humedad %>
  </div>

  <div class="field">
    <%= form.label :fecha %>
    <%= form.date_select :fecha, id: :path_fecha %>
  </div>

  <div class="field">
    <%= form.label :hora %>
    <%= form.time_select :hora, id: :path_hora %>
  </div>

  <div class="field">
    <%= form.label :comentario %>
    <%= form.text_area :comentario, id: :path_comentario %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
