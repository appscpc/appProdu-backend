<p id="notice"><%= notice %></p>

<h1>Sampling Types</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sampling_types.each do |sampling_type| %>
      <tr>
        <td><%= sampling_type.nombre %></td>
        <td><%= link_to 'Show', sampling_type %></td>
        <td><%= link_to 'Edit', edit_sampling_type_path(sampling_type) %></td>
        <td><%= link_to 'Destroy', sampling_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

